@model  Vodafone.Models.fnFormulaVPC_Result
@{
    ViewData["Title"] = "";
}
<a href="@Url.Action("ReportPDF", "Home", new { key = ViewBag.key, code = ViewBag.code }, null)" class="button bacground-grey"><h4>Export to PDF</h4></a>
<section class="contentblock">
    <div class="container">
        <div class="whitebackground">
            <div class="col-sm-12 pb0">
                <div class="heading1">
                    <h3><span><b>EP01 Energy Policy</b></span><div class="line2"></div></h3>
                </div>
            </div>
            <div class="col-sm-12"><h3 class="color-grey"><span><b>APPENDIX A</b></span></h3></div>
            <div class="row col-xs-12 pb0">
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-9 fb"><h4 class="bacground-grey"><span><b>OPERATING COMPANY</b></span></h4></div>
                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-3"><h4 class="bacground-orange"><span>@ViewBag.raportname</span></h4></div>

                <div class="col-sm-7 col-md-6 col-lg-10 col-xl-9">
                    <h5 class="yelou-greed"><span><b>REPORTING PERIOD:</b></span></h5>
                </div>
                <div class="col-sm-5 col-md-6 col-lg-2 col-xl-3">
                    <div class="col-sm-12 wbc2"><b>@DateTime.Now.ToShortDateString()</b></div>
                </div>

            </div>
            <div class="col-sm-12 pb0">
                <div class="row col-xs-12 col-lg-10 col-xl-9 pb0">
                    <div class="col-sm-12 wbc1"></div>
                    <div class="col-md-12 col-lg-7 pb0">
                        <div class="col-sm-12 bbc">High electricity prices using historical volatility</div>
                    </div>
                    <div class="col-md-12 col-lg-5 pb0">
                        <div class="col-sm-12 ybc"><b>@ViewBag.High.ToString("0.##") @ViewBag.CurrrencyCode/@ViewBag.UnitName</b></div>
                    </div>
                    <div class="col-sm-12 wbc1 clear"></div>
                    <div class="col-md-12 col-lg-7 pb0">
                        <div class="col-sm-12 bbc">Medium electricity prices using historical volatility</div>
                    </div>
                    <div class="col-md-12 col-lg-5 pb0">
                        <div class="col-sm-12 ybc"><b>@ViewBag.Medium.ToString("0.##")</b>-<b>@ViewBag.High.ToString("0.##") @ViewBag.CurrrencyCode/@ViewBag.UnitName</b></div>
                    </div>
                    <div class="col-sm-12 wbc1 clear"></div>
                    <div class="col-md-12 col-lg-7 pb0">
                        <div class="col-sm-12 bbc">Low electricity prices using historical volatility</div>
                    </div>
                    <div class="col-md-12 col-lg-5 pb0">
                        <div class="col-sm-12 ybc"><b>@ViewBag.Low.ToString("0.##")</b>-<b>@ViewBag.Medium.ToString("0.##") @ViewBag.CurrrencyCode/@ViewBag.UnitName</b></div>
                    </div>
                    <div class="col-sm-12 wbc1 clear"></div>
                    <div class="col-md-12 col-lg-7 pb0">
                        <div class="col-sm-12 bbc">Ultra-low electricity prices using historical volatility</div>
                    </div>
                    <div class="col-md-12 col-lg-5 pb0">
                        <div class="col-sm-12 ybc"><b>@ViewBag.Low.ToString("0.##") @ViewBag.CurrrencyCode/@ViewBag.UnitName</b></div>
                    </div>
                    <div class="col-sm-12 wbc1 clear"></div>
                    <div class="col-md-12 col-lg-7 pb0">
                        <div class="col-sm-12 bbc">Lowest price during reporting period</div>
                    </div>
                    <div class="col-md-12 col-lg-5 pb0">
                        <div class="col-sm-12 ybc"><b>@ViewBag.MinMarket_Value.ToString("0.##") @ViewBag.CurrrencyCode/@ViewBag.UnitName</b><b> on @ViewBag.MinMarket_Date.ToShortDateString()</b></div>
                    </div>
                    <div class="col-sm-12 wbc1 clear"></div>
                    <div class="bbc col-md-12 col-lg-4 pb0">
                        <div class="col-sm-12 bbc1">Prices were (tick one box)</div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                        <div class="wbc">
                            <div class="col-xs-12 col-sm-12 pb0">High</div>
                        </div>
                        <div class="ybc1">
                            <div class="col-xs-12 col-sm-12 pb0">@ViewBag.Highx</div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                        <div class="wbc">
                            <div class="col-xs-12 col-sm-12 pb0">Medium</div>
                        </div>
                        <div class="ybc1">
                            <div class="col-xs-12 col-sm-12 pb0">@ViewBag.Mediumx</div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                        <div class="wbc">
                            <div class="col-xs-12 col-sm-12 pb0">Low</div>
                        </div>
                        <div class="ybc1">
                            <div class="col-xs-12 col-sm-12 pb0">@ViewBag.Lowx</div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                        <div class="wbc">
                            <div class="col-xs-12 col-sm-12 pb0">Ultra-low</div>
                        </div>
                        <div class="ybc1">
                            <div class="col-xs-12 col-sm-12 pb0">@ViewBag.UltraLowx</div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3 col-lg-2 col-xl-3"></div>
            </div>
        </div>
        <div class="whitebackground">
            <div class="col-sm-12  pb0">
                <div class="heading1">
                    <h4><span><b>Forecast Consumption ("FC")</b></span><div class="line2"></div></h4>
                </div>
                <div class="row col-sm-12 pb0">
                    <div class="col-sm-12 wbc1"></div>
                    <div class="col-md-12 col-lg-2 pb0">
                        <div class="col-sm-12 bbc"><b>Base load</b></div>
                        <div class="col-sm-12 fd"><b></b></div>
                    </div>
                    <div class="col-md-12 col-lg-2 pb0 fd">
                        <div class="col-sm-12 fd"><b></b></div>
                        <div class="col-sm-12 fd"><b></b></div>
                    </div>
                    <div class="col-md-12 col-lg-2 pb0 fd">
                        <div class="col-sm-12 fd"><b></b></div>
                        <div class="col-sm-12 fd"><b></b></div>
                    </div>
                    <div class="col-md-12 col-lg-4 pb0">
                        <div class="col-sm-6 fd"><b></b></div>
                        <div class="col-sm-12 ybc"><b>@ViewBag.VolumeTotal.ToString("0.##") @ViewBag.UnitName</b></div>
                    </div>
                    <div class="col-md-12 col-lg-2 pb0 fd">
                        <div class="col-sm-12 fd"><b></b></div>
                        <div class="col-sm-12 fd"><b></b></div>
                    </div>
                </div>
                <div class="col-sm-4"></div>
            </div>
        </div>
        @if (ViewBag.MaxPriceFixed != null)
        {
            if (ViewBag.VolumeFixProcent != null)
            {
                <div class="whitebackground">
                    <div class="col-sm-12  pb0">
                        <div class="heading1">
                            <h4><span><b>@ViewBag.Year Fixing</b></span><div class="line2"></div></h4>
                        </div>
                        <div class="row col-sm-12 pb0">
                            <div class="col-sm-12 wbc1"></div>
                            <div class="col-md-12 col-lg-2 pb0">
                                <div class="col-sm-12 bbc"><b>Base load</b></div>
                                <div class="col-sm-12 fd"><b></b></div>
                            </div>
                            <div class="col-sm-12 col-md-0 col-lg-2 fd pb0">
                                <div class="col-sm-12 fd"><b></b></div>
                                <div class="col-sm-12 fd"><b></b></div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                                <div class="col-sm-12 wbc">Price fixed</div>
                                <div class="col-sm-12 ybc"><b>@ViewBag.MaxPriceFixed.ToString("0.##") @ViewBag.CurrrencyCode/@ViewBag.UnitName</b></div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-4 pb0">
                                <div class="row col-sm-12 pb0">
                                    <div class="col-sm-6 wbc">LV</div><div class="col-sm-6 wbc">MW</div>
                                </div>
                                <div class="col-sm-12 ybc"><b>@ViewBag.VolumeFixProcent.ToString("0.##")% of FC</b></div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                                <div class="col-sm-12 wbc">Policy compliant</div>
                                @if (ViewBag.PolicyCompliant1 == "Yes")
                                {
                                    <div class="col-sm-12 ybc" style="background-color:#9eff75; height: 20px;"><b></b></div>
                                }
                                @if (ViewBag.PolicyCompliant1 == "No")
                                {
                                    <div class="col-sm-12 ybc" style="background-color:#ff7676; height: 20px;"><b></b></div>
                                }
                            </div>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                </div>
            }
        }
        @if (ViewBag.MaxPriceFixed1 != null)
        {
            if (ViewBag.VolumeFixProcent1 != null)
            {
                <div class="whitebackground">
                    <div class="col-sm-12 pb0">

                        <div class="heading1">
                            <h4><span><b>@ViewBag.Year1 Fixing</b></span><div class="line2"></div></h4>
                        </div>

                        <div class="row col-sm-12 pb0">
                            <div class="col-sm-12 wbc1"></div>
                            <div class="col-md-12 col-lg-2 pb0">
                                <div class="col-sm-12 bbc"><b>Base load</b></div>
                                <div class="col-sm-12 fd"><b></b></div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2 pb0 fd">
                                <div class="col-sm-12 fd"><b></b></div>
                                <div class="col-sm-12 fd"><b></b></div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                                <div class="col-sm-12 wbc">Price fixed</div>
                                <div class="col-sm-12 ybc">
                                    <b>
                                        @ViewBag.MaxPriceFixed1.ToString("0.##") @ViewBag.CurrrencyCode/@ViewBag.UnitName
                                    </b>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2 pb0 fd">
                                <div class="col-sm-12 fd"><b></b></div>
                                <div class="col-sm-12 fd"><b></b></div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                                <div class="col-sm-12 wbc">MW</div>
                                <div class="col-sm-12 ybc"><b>@ViewBag.VolumeFixProcent1.ToString("0.##")% of FC</b></div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                                <div class="col-sm-12 wbc">Policy compliant</div>
                                @if (ViewBag.PolicyCompliant2 == "Yes")
                                {
                                    <div class="col-sm-12 ybc" style="background-color:#9eff75; height: 20px;"><b></b></div>
                                }
                                @if (ViewBag.PolicyCompliant2 == "No")
                                {
                                    <div class="col-sm-12 ybc" style="background-color:#ff7676; height: 20px;"><b></b></div>
                                }
                            </div>
                        </div>
                        <div class="col-sm-4"></div>
                    </div>
                </div>
            }
        }
        @if (ViewBag.MaxPriceFixed2 != null)
        {

            <div class="whitebackground">
                <div class="col-sm-12 pb0">

                    <div class="heading1">
                        <h4><span><b>@ViewBag.Year2 Fixing</b></span><div class="line2"></div></h4>
                    </div>
                    <div class="row col-sm-12 pb0">
                        <div class="col-sm-12 wbc1"></div>
                        <div class="l-md-12 col-lg-2 pb0">
                            <div class="col-sm-12 bbc"><b>Base load</b></div>
                            <div class="col-sm-12 fd"><b></b></div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-2 pb0 fd">
                            <div class="col-sm-12 fd"><b></b></div>
                            <div class="col-sm-12 fd"><b></b></div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                            <div class="col-sm-12 wbc">Price fixed</div>
                            <div class="col-sm-12 ybc"><b>@ViewBag.MaxPriceFixed2.ToString("0.##") @ViewBag.CurrrencyCode/@ViewBag.UnitName</b></div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-2 fd pb0">
                            <div class="col-sm-12 fd"><b></b></div>
                            <div class="col-sm-12 fd"><b></b></div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-2 pb0">
                            <div class="col-sm-12 wbc">MW</div>
                            <div class="col-sm-12 ybc"><b>@ViewBag.VolumeFixProcent2.ToString("0.##")% of FC</b></div>
                        </div>
                        <div class="ccol-sm-12 col-md-6 col-lg-2 pb0">
                            <div class="col-sm-12 wbc">Policy compliant</div>
                            @if (ViewBag.PolicyCompliant3 == "Yes")
                            {
                                <div class="col-sm-12 ybc" style="background-color:#9eff75; height: 20px;"><b></b></div>
                            }
                            @if (ViewBag.PolicyCompliant3 == "No")
                            {
                                <div class="col-sm-12 ybc" style="background-color:#ff7676; height: 20px;"><b></b></div>
                            }
                        </div>
                    </div>
                    <div class="col-sm-4"></div>
                </div>
            </div>
        }
    </div>
</section>